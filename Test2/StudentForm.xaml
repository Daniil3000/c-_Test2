<Window x:Class="Test2.StudentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        mc:Ignorable="d"
        Title="StudentForm" Height="450" Width="800">
    <StackPanel>
        <WrapPanel Margin="10">
            <Label Content="Enter student's id"/>
            <TextBox x:Name="txtId" Width="150"></TextBox>
        </WrapPanel>
        <Button Width="80" Content="Add a student" HorizontalAlignment="Left" Margin="10" Click="Button_Click"/>
        <ListBox x:Name="lstStudents" DisplayMemberPath="Name"/>


    </StackPanel>
</Window>
