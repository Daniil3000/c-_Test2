<Window x:Class="Test2.Tabs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        mc:Ignorable="d"
        Title="Tabs" Height="250" Width="400">
    <Grid>
        <TabControl>
            <TabItem x:Name="visibleTab" Header="Visible Tab">
                <CheckBox Content="Show hidden tab" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            </TabItem>
            <TabItem x:Name="hiddenTab" Header="Hidden Tab" Visibility="Hidden"></TabItem>
        </TabControl>
        
    </Grid>
</Window>
