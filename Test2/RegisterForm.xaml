<Window x:Class="Test2.RegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        mc:Ignorable="d"
        Title="RegisterForm" Height="450" Width="800">
    <StackPanel Background="LightBlue">
        <WrapPanel Margin="0,10">
            <Label Content="First Name" Background="Green" FontWeight="Bold"/>
            <TextBox Width="150" Name="txtFirstName"></TextBox>
        </WrapPanel >
        <WrapPanel Margin="0,10">
            <Label Content="Last Name" Background="Green" FontWeight="Bold"/>
            <TextBox Width="150" Name="txtLastName"></TextBox>
        </WrapPanel>
        <WrapPanel Margin="0,10">
            <Label Content="Phone Number" Background="Green" FontWeight="Bold"/>
            <TextBox Width="150" Name="txtPhone"></TextBox>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left">
            <Button x:Name="btnSave" Content="Save" Width="60" Margin="10" Click="btnSave_Click"/>
            <Button x:Name="btnClear" Content="Clear" Width="60" Margin="10" Click="btnClear_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>
